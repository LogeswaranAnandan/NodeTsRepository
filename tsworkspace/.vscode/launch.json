{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true,
            "sourceMapPathOverrides": {
                "webpack:///./build/*": "${webRoot}/app/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program - Development",
            "program": "${workspaceFolder}\\app\\app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "skipFiles": [
                "node_modules/**/*.js",
                "<node_internals>/*.js",
                "${workspaceFolder}/**/*.js"
            ],
            "envFile": "${workspaceFolder}/env-setup/.env.dev",
            "sourceMaps": true,
            "smartStep": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program - Production",
            "program": "${workspaceFolder}\\app\\app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "skipFiles": [
                "node_modules/**/*.js",
                "${workspaceFolder}/**/*.js"
            ],
            "envFile": "${workspaceFolder}/env-setup/.env.prod"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program - Testing",
            "program": "${workspaceFolder}\\app\\app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "skipFiles": [
                "node_modules/**/*.js",
                "${workspaceFolder}/**/*.js"
            ],
            "envFile": "${workspaceFolder}/env-setup/.env.test"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch server Program",
            "program": "${workspaceFolder}\\app\\server.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "skipFiles": [
                "node_modules/**/*.js",
                "${workspaceFolder}/**/*.js"
            ]
            // "envFile": "${workspaceFolder}/env-setup/.env.dev"
        }
    ]
}